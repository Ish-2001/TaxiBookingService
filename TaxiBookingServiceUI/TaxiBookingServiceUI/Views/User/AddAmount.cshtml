@model TaxiBookingServiceUI.Models.UserViewModel

@{
    ViewData["Title"] = "AddAmount";
    <p style="color : red">@TempData["message"]</p>
   
}

<h1>AddAmount</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddAmount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
             <div class="form-group">
                <label asp-for="UserName" class="control-label" hidden></label>
                <input asp-for="UserName" class="form-control" hidden/>
                <span asp-validation-for="UserName" class="text-danger" hidden></span>
            </div>

             <div class="form-group">
                <label asp-for="FirstName" class="control-label" hidden></label>
                <input asp-for="FirstName" class="form-control" hidden />
                <span asp-validation-for="FirstName" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label" hidden></label>
                <input asp-for="LastName" class="form-control" hidden />
                <span asp-validation-for="LastName" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"hidden></label><br />
                <input asp-for="Gender" class="form-control" hidden />
                <span asp-validation-for="Gender" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label" hidden></label>
                <input asp-for="Email" class="form-control" hidden />
                <span asp-validation-for="Email" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label" hidden></label>
                <input asp-for="PhoneNumber" class="form-control" hidden />
                <span asp-validation-for="PhoneNumber" class="text-danger" hidden></span>
            </div>
            <div class="form-group">
                <label asp-for="Role" class="control-label" hidden></label>
                <input asp-for="Role" class="form-control" hidden />
                <span asp-validation-for="Role" class="text-danger" hidden></span>
            </div>

            <div class="form-group">
                <label asp-for="Balance" class="control-label" ></label>
                <input asp-for="Balance" class="form-control" />
                <span asp-validation-for="Balance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="BookingRequest">Go Back</a>
</div>




