@model TaxiBookingServiceUI.Models.CancellationReasonsViewModel

@{
    ViewData["Title"] = "CancellationReasons";
    <p style="color : red">@TempData["message"]</p>
}

<h1>CancellationReasons</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ConfirmedBookingCancellation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                @Html.DropDownList("Reason" , new SelectList((List<string>)ViewBag.reasonNames) , "--Select the Reason--" , new{ @id = "Reason" , @class="form-control"})
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
