@model TaxiBookingServiceUI.Models.BookingViewModel
@{
    ViewData["Title"] = "EnterOTP";
}

<h1>EnterOTP</h1>

<form asp-action="EnterOTP">
     <div class="form-group">
                <label asp-for="Id" class="control-label" hidden></label>
                <input asp-for="Id" class="form-control" hidden/>
                <span asp-validation-for="Id" class="text-danger" hidden></span>
    </div>
    <div class="form-group">
        <label class="control-label">OTP</label>
        <input type="text" id="otp" name="otp" class="form-control" />
        <span class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Start Ride" class="btn btn-primary" />
    </div>

</form>